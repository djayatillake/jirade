# Jirade Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Required: Anthropic API Key (only needed for standalone agent, not MCP)
# =============================================================================
ANTHROPIC_API_KEY=sk-ant-...

# =============================================================================
# Optional: Jira OAuth (for Jira integration)
# =============================================================================
JIRADE_JIRA_OAUTH_CLIENT_ID=
JIRADE_JIRA_OAUTH_CLIENT_SECRET=

# =============================================================================
# Databricks Connection (required for dbt CI)
# =============================================================================
# Databricks workspace host (e.g., dbc-xxxxx.cloud.databricks.com)
JIRADE_DATABRICKS_HOST=

# SQL warehouse HTTP path (e.g., /sql/1.0/warehouses/abc123)
JIRADE_DATABRICKS_HTTP_PATH=

# Authentication type: "oauth" (default) or "token"
# OAuth uses browser-based authentication or existing Databricks CLI credentials
JIRADE_DATABRICKS_AUTH_TYPE=oauth

# Only required if JIRADE_DATABRICKS_AUTH_TYPE=token
# JIRADE_DATABRICKS_TOKEN=dapi...

# Default catalog for production table lookups (e.g., hive_metastore)
# This is the catalog used when querying production tables for comparison
JIRADE_DATABRICKS_CATALOG=

# =============================================================================
# dbt CI Configuration (required for jirade_run_dbt_ci)
# =============================================================================
# Catalog where CI schemas/tables are created - REQUIRED for dbt CI
# This should be YOUR dev catalog where you have CREATE SCHEMA permission
# CI schemas are named: jirade_ci_{pr_number}_{original_catalog}_{original_schema}
# Example: development_djayatillake_metadata
JIRADE_DATABRICKS_CI_CATALOG=

# Days of lookback for microbatch models (default: 3)
JIRADE_DBT_EVENT_TIME_LOOKBACK_DAYS=3

# Prefix for CI schema names (default: jirade_ci)
JIRADE_DBT_CI_SCHEMA_PREFIX=jirade_ci
